<Window x:Class="WSCADCodeChallange2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSCADCodeChallange2022"
        mc:Ignorable="d"
        Title="Coordinate" 
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}" 
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Border>
        <Canvas x:Name="Canvas" VerticalAlignment="Center" HorizontalAlignment="Center" 
                              RenderTransform="1 0 0 -1 0 0"></Canvas>
    </Border>
</Window>